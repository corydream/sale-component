{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "outDir": "./release/src",
        "baseUrl": "./",
        "declaration": true,
        "importHelpers": true,
        "module": "es2015",
        "sourceMap": true,
        "target": "es2015",
        "types": [
            "node"
        ]
    },
    "files": [
        "./src/__temp_components/bgx-legion.module.ts"
    ],
