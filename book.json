{
    "title": "bgx-legion 文档",
    "description": "为了统一管理框架组件而建立的组件库",
    "language": "zh",
    "plugins": [
        "prism",
        "-highlight",
        "splitter",
        "include-codeblock",
        "expandable-chapters",
        "ace"
    ],
    "pluginsConfig": {
        "include-codeblock": {
            "template": "ace",
            "unindent": true,
            "theme": "monokai"
        },
        "prism": {
            "css": [
                "prismjs/themes/prism-tomorrow.css"
            ],
            "lang": {
                "flow": "typescript"
            }
        }
    }

}
